@page "/counter"
@inject SingletonService singleton

<h1>Counter</h1>

<p>Current count: @currentCount</p>
<p>Singleton count: @singleton.Value</p>
<p>Transient count: @Transient.Value</p>

<button class="btn btn-primary" @onclick="IncrementCountAsync">Increment</button>
<button class="btn btn-primary" @onclick="IncrementCountAsyncFromJavascript">Increment JS</button>

<input type="number" @bind="currentCount" />
